<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.santillanj.rplife_z.Activities.CharacterCreationActivity">

    <com.santillanj.rplife_z.Adapters.CustomViewPager
        android:id="@+id/mCharViewPager"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/mNavTabStrip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.gigamole.navigationtabstrip.NavigationTabStrip
        android:id="@+id/mNavTabStrip"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/mGradientFooter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:nts_active_color="@color/colorOrangeBtnGraidentStart"
        app:nts_color="@color/colorOrangeBtnGraidentEnd"
        app:nts_corners_radius="3.5dp"
        app:nts_factor="2"
        app:nts_gravity="bottom"
        app:nts_inactive_color="@color/colorTxtWhite"
        app:nts_type="point"
        app:nts_typeface="fonts/BebasNeue.otf"
        app:nts_weight="4dp" />



    <View
        android:id="@+id/mGradientFooter"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@drawable/header_gradient_bluegreen"
        app:layout_constraintBottom_toTopOf="@+id/mBtnSaveCharacter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />




    <com.santillanj.rplife_z.Fonts.CustomButton
        android:id="@+id/mBtnSaveCharacter"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@drawable/btn_orange_style"
        android:elevation="0dp"
        android:padding="0dp"
        android:text="Save Character"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/colorTxtWhite"/>


</android.support.constraint.ConstraintLayout>
